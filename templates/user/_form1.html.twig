{% extends "admin.html.twig" %}
{% block body %}


    <br>
    <div class="section-area section-sp1 ovpr-dark bg-fix online-cours" style="background-image:url(assets/images/background/bg1.jpg);">
    <div class="container">
    <div class="row">
    <divers class="col-md-12 text-center text-white">
        <h2>Les Utilisateurs</h2>
    </divers

    <br>
    <br></br>

    <link rel="stylesheet" href="{{asset('assets/css/bootstrap.css')}}">
    <div class="container">


    {{ form_start(form, {'attr' : {'novalidate':'novalidate'}})}}
    <div class="form-group" style="color:white;">
        {{ form_row(form.cin,{'attr' : {'class':'form-control'}}) }}

    </div>
    <div class="form-group" style="color:white;">

        {{ form_label (form.nom,"Le nom d'utilisateur:") }}
        {{ form_widget(form.nom,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.nom) }}
    </div>
    <div class="form-group">

        {{ form_label (form.prenom,"Le prenom d'utilisateur:") }}
        {{ form_widget(form.prenom,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.prenom) }}
    </div>
    <div class="form-group">

        {{ form_label (form.tel,"Le Numero de Telephone:") }}
        {{ form_widget(form.tel,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.tel) }}
    </div>

    <div class="form-group">


        {{ form_label (form.email,"L'email :") }}
        {{ form_widget(form.email,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>


    <div class="form-group">

        {{ form_label (form.role,"Role:") }}
        {{ form_widget(form.role,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.role) }}

    </div>
    <div class="form-group">

        {{ form_label (form.datenaissance,"Date de naissance:") }}
        {{ form_widget(form.datenaissance,{'attr' : {'class':'form-control'}}) }}
        {{ form_errors(form.datenaissance) }}

    </div>





    <button class="btn btn-success" >{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

{% endblock %}