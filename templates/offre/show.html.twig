{% extends "baseBack.html.twig" %}
{% block title %}liste des Offres
{% endblock %}
{% block body %}


	{% block body %}
		<h1 class="red bold">Liste des offres</h1>
		<p class="italic" style="font-size: 20px;">Cette page utilise une feuille de styles personnalisée pour définir ses styles.</p>
	{% endblock %}
	<h1>Offre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ offre.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ offre.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ offre.description }}</td>
			</tr>
			<tr>
				<th>Proprietaire</th>
				<td>{{ offre.proprietaire }}</td>
			</tr>
		</tbody>
	</table>
	<div align="center">
		<button class="btn">
			<a href="{{ path('app_offre_index') }}">Back to list</a>
		</button>
		{{ include('offre/_delete_form.html.twig') }}
		<button class="btn">
			<a href="{{ path('app_offre_edit', {'id': offre.id}) }}">Edit</a>
		</button>
	</div>
{% endblock %}
